@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movies", new {@class = "btn btn-primary" })
<div class="list-group">
    @if (Model.Movies.Count == 0)
    {
        <text>There are no movies available</text>
    }
    else
    {


        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td> @Html.ActionLink(@movie.Name, "Edit", new { id = movie.Id }, new { @class = "" })</td>
                        <td>@movie.Genre.GenreName</td>
                    </tr>
                }
            </tbody>

            @*<a href="#" class="list-group-item"> @customer.Name </a>*@


        </table>


        @*<a href="#" class="list-group-item"> @customer.Name </a>*@




    }
</div>



